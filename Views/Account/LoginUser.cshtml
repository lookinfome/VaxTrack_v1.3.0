@model v1Remastered.Dto.UserDetailsDto_Login;

@{
    ViewBag.pageTitle = "Login Page".ToUpper();
    ViewBag.pageDesc = "an let us welcome back you ";
    var currMonthYear = DateTime.Now.ToString("yyyy-MM-dd");
}


<div class="container">
    <div class="row justify-content-center mt-5">

        <div class="col col-lg-3 col-md-6 col-sm-12">

            <div class="page-title text-center">
                <h3> @ViewBag.pageTitle </h3>
                <span style="font-size: 16px; color: lime;">
                    @ViewBag.pageDesc <i class="icon-smile far fa-smile-wink"></i>
                </span>
            </div>

            <div class="login-form">
                @using(Html.BeginForm("LoginUser", "Account", FormMethod.Post))
                {
                    @* username *@
                    <div>
                        @Html.TextBoxFor(model=>model.UserId, new{@style="width: 100%;", @class="mt-4 login-input", placeholder="Username"})
                        @Html.ValidationMessageFor(model => model.UserId, null, new { @class = "mx-2 validation-msg" }, null)
                    </div>

                    @* password *@
                    <div>
                        @Html.PasswordFor(model=>model.UserPassword, new{@style="width: 100%;", @class="mt-4 login-input", placeholder="Password"})
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "mx-2 validation-msg" }, null)
                    </div>

                    @* remember me *@
                    @* <div class="mt-2">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">Remember me</label>
                    </div> *@

                    @* submit *@
                    <button type="submit" class="mt-3 login-submit">Sign In</button>
                }


            </div>

                <div class="action-link mt-3 d-flex">
                    <p>Or new user?</p>
                    <a style="color:yellow;" class="mx-2" href="@Url.Action("RegisterUser", "Account")">SignUp</a>
                </div>


        </div>
    </div>
</div>
