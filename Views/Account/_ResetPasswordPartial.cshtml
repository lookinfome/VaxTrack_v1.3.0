@model v1Remastered.Dto.UserDetailsDto_PasswordReset

@{
    ViewBag.pageTitle = "reset password".ToUpper();
    ViewBag.pageDesc = "it's a good habit to keep changing password ";
}


<div class="row justify-content-center mt-5">
    <div class="col col-lg-4 col-md-6 col-sm-12">

        <!-- reset password view: titel, description, alert messages -->
        <div class="reset-password-content text-center">
            <h3 class="reset-password-title-content"> @ViewBag.pageTitle </h3>
            <span class="reset-password-body-content">
                @ViewBag.pageDesc <i class="icon-sync fas fa-sync-alt"></i>
            </span>
        </div>

        <!-- reset password: form -->
        <div class="reset-password-form mt-3">
            @using(Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new{id="resetPasswordForm"}))
            {
                @Html.AntiForgeryToken()

                <div class="mt-2">
                    @* userid *@
                    <div class="text-center">
                        @Html.TextBoxFor(model => model.UserId, new { @style = "width: 100%;", @class = "reset-password-input", placeholder = "Username" })
                        @Html.ValidationMessageFor(model => model.UserId, null, new { @class = "mx-2 validation-msg" })
                    </div>

                    @* password *@
                    <div class="text-center mt-2">
                        @Html.PasswordFor(model => model.UserPassword, new { @style = "width:100%;", @class = "reset-password-input", placeholder = "New Password", id = "Password" }) <br>
                        <span id="passwordStrength" class="validation-msg"></span>
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "validation-msg" }, null)
                    </div>

                    @* confirm password *@
                    <div class="text-center mt-2">
                        @Html.PasswordFor(model => model.UserConfirmPassword, new { @style = "width:100%;", @class = "reset-password-input", placeholder = "Confirm New Password", id = "ConfirmPassword" }) <br>
                        @Html.ValidationMessageFor(model => model.UserConfirmPassword, null, new { @class = "validation-msg" }, null)
                    </div>
                </div>

                @* submit *@
                <div class="text-center mt-1">
                    <button id="reset-password-submit" type="submit" class="mt-3 reset-password-submit">Reset Password</button>
                </div>
            }
        </div>

    </div>
</div>