@model v1Remastered.Dto.UserDetailsDto_UserProfile

@{
    var currMonthYear = DateTime.Now.ToString("yyyy-MM-dd");

    @* format UID *@
    string Uid = @Model.UserUid;
    string FormattedUid = string.Format("{0}-{1}-{2}-{3}",
    Uid.Substring(0, 3),
    Uid.Substring(3, 3),
    Uid.Substring(6, 3),
    Uid.Substring(9, 3));
}

<style>
    body {color: #FFF6E9;}
</style>


<div class="container">

    @* 0th row *@
    @* alert messages *@
    @if(!string.IsNullOrEmpty(ViewBag.WelcomeMessage))
    {
        <div class="row">
            <div id="welcomeMessage" style="padding:none; box-shadow: 0px 1px 10px lime;" class="alert alert-success text-center" role="alert">
                <span> 
                    <b> @ViewBag.WelcomeMessage </b>
                    <i class="far fa-smile"></i> 
                </span>
            </div>
        </div>
    }

    @if(!string.IsNullOrEmpty(ViewBag.UserProfileUpdateSuccessMsg))
    {
        <div class="row">
            <div id="updateStatusMsg" style="padding:none; box-shadow: 0px 1px 10px lime;" class="alert alert-success text-center">
                <b> @ViewBag.UserProfileUpdateSuccessMsg </b>
                <i class="far fa-smile"></i> 
            </div>
        </div>
    }

    @if(!string.IsNullOrEmpty(ViewBag.UserProfileUpdateErrorMsg))
    {
        <div class="row">
            <div id="updateStatusMsg" style="padding:none; box-shadow: 0px 1px 10px lime;" class="alert alert-danger text-center">
                <b> @ViewBag.UserProfileUpdateErrorMsg </b>
                <i class="far fa-frown"></i>
            </div>
        </div>
    }

    @if(!string.IsNullOrEmpty(ViewBag.BookingStatusMsg))
    {
        <div class="row">
            <div id="bookingStatusMsg" class="alert alert-info text-center">
                <b> @ViewBag.BookingStatusMsg </b>
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        </div>
    }
    



    @* 1st row: identity details *@
    <div class="row justify-content-center mt-3">
        <div style="border-bottom: 1px solid #E6E9AF;" class="user-details-identity col col-lg-6 col-md-12 col-sm-12 d-flex justify-content-between">
            
            @* user name *@
            <h3> 
                @if(@Model.UserRole == false)
                {
                    <i class="fas fa-user"></i>
                }
                else
                {
                    <i class="fas fa-user-shield"></i>
                } 
                @Model.Username 
            </h3>

            @* user id *@
            <h3> 
                <i class="fas fa-id-badge"></i> 
                @Model.UserId 
            </h3>

        </div>
    </div>

    @* 2nd row: personal details *@
    <div class="user-details-personal row justify-content-center mt-5">
        <div class="col col-lg-8 col-md-12 col-sm-12 justify-content-center">

            @* section header *@
            <div>
                <h5 class=""> <i class="fas fa-user"></i> Personal Details </h5>
            </div>

            @* personal details and profile picture *@
            <div class="d-flex justify-content-between">
                @* personal details *@
                <div class="mt-4">
                    
                    @* user gender *@
                    <div style=">
                        <span style=" font-weight: 600;"> <i class="fas fa-venus-mars"></i> Gender: </span>
                        @if (Model.UserGender == "M")
                        {
                            <span><b>Male</b></span>
                        }
                        @if (Model.UserGender == "F")
                        {
                            <span><b>Female</b></span>
                        }
                        @if (Model.UserGender == "O")
                        {
                            <span><b>Other</b></span>
                        }
                    </div>

                    @* user contact *@
                    <div style="">
                        <span style=" font-weight: 600;"> <i class="fas fa-phone"></i> Contact: </span>
                        <b>@Model.UserPhone</b>
                    </div>

                    @* user unique id *@
                    <div style="">
                        <span style="font-weight: 600;"> <i class="fas fa-id-card"></i> Unique ID: </span>
                        <b>@FormattedUid</b>
                    </div>

                    @* user birthdate *@
                    <div style="">
                        <span style="font-weight: 600;">
                            <i class="fas fa-birthday-cake"></i> Date of Birth:
                        </span>
                        @Model.UserBirthdate.ToString("yyyy-MM-dd")
                    </div>
                
                </div>

                @* profile picture *@
                <div>
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <div class="">
                            <img class="user-profile-img" style="width: 150px; height: 150px;" src="../@Model.ProfilePicturePath" alt="Profile Picture"/>
                        </div>
                    }
                    else
                    {
                        <div class="mb-2">
                            <span style="color: white;">No profile picture uploaded</span>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

    @* 3rd row: vaccination details *@
    <div class="user-details-vaccination row justify-content-center mt-3">
        <div class="col col-lg-8 col-md-12 col-sm-12 justify-content-center">

            @* section header *@
            <div>
                <h5 class=""> <i class="fas fa-notes-medical"></i> Vaccination Details </h5>
            </div>
            
            @* vaccination details *@
            <div class="mt-3 d-flex justify-content-between">
                @* user vaccinaion id *@
                <div style="">
                    <span style="font-weight: 600;">
                        <i style="color: yellow; text-shadow: 0px 1px 10px yellow;" class="fas fa-bookmark"></i> Vaccination ID <br>
                    </span>
                    @Model.UserVaccineDetails.UserVaccinationId
                </div>

                 @* user vaccination status *@
                <div style="">
                    <span style="font-weight: 600; ">
                        @if (Model.UserVaccineDetails.UserVaccinationStatus.ToLower() == "vaccinated")
                        {
                            <i style="color:lime; text-shadow: 0px 1px 10px lime;" class="fas fa-wifi"></i>
                        }
                        else if (Model.UserVaccineDetails.UserVaccinationStatus.ToLower() == "partially vaccinated")
                        {
                            <i style="color:yellow; text-shadow: 0px 1px 20px yellow;" class="fas fa-wifi"></i>
                        }
                        else
                        {
                            <i style="color:red; text-shadow: 0px 1px 20px red;" class="fas fa-wifi"></i>
                        }
                        Vaccination Status <br>
                    </span>
                    @Model.UserVaccineDetails.UserVaccinationStatus
                </div>

                @* user dose 1 approval date *@
                <div style="">
                    <span style="font-weight: 600;">
                        @if (Model.UserBookingDetails.Dose1ApproveDate == DateTime.MinValue)
                        {
                            <i style="color: red; text-shadow: 0px 1px 10px red;" class="fas fa-exclamation"></i>
                        }
                        else
                        {
                            <i style="color: lime; text-shadow: 0px 1px 10px lime;" class="fas fa-check"></i>
                        }
                        Dose 1 Approve
                    </span>
                    <br>
                    @if (Model.UserBookingDetails.Dose1ApproveDate == DateTime.MinValue)
                    {
                        <p>NA</p>
                    }
                    else
                    {
                        @Model.UserBookingDetails.Dose1ApproveDate.ToString("yyyy-MM-dd")
                    }
                </div>

                @* user dose 2 approval date *@
                <div style="">
                    <span style="font-weight: 600;">
                        @if (Model.UserBookingDetails.Dose2ApproveDate == DateTime.MinValue)
                        {
                            <i style="color: red; text-shadow: 0px 1px 10px red;" class="fas fa-exclamation"></i>
                        }
                        else
                        {
                            <i style="color: lime; text-shadow: 0px 1px 10px lime;" class="fas fa-check"></i>
                        }
                        Dose 2 Approve
                    </span>
                    <br>
                    @if (Model.UserBookingDetails.Dose2ApproveDate == DateTime.MinValue)
                    {
                        <p>NA</p>
                    }
                    else
                    {
                        @Model.UserBookingDetails.Dose2ApproveDate.ToString("yyyy-MM-dd")
                    }
                </div>

            </div>

        </div>
    </div>

    @* 4th row: booking details *@
    <div class="user-details-booking row justify-content-center mt-3">
        <div class="col col-lg-8 col-md-12 col-sm-12 justify-content-center">

            @* section header *@
            <div>
                <h5 class=""> <i class="fas fa-book-medical"></i> Booking Details </h5>
            </div>

            @* booking details *@
            <div class="mt-3">
                @* user booking id *@
                <div>
                    <span>
                        <i style="color: yellow; text-shadow: 0px 1px 10px yellow;" class="fas fa-bookmark"></i>
                        Booking ID : @if(string.IsNullOrEmpty(Model.UserBookingDetails.BookingId)){ <span>NA</span> } else { @Model.UserBookingDetails.BookingId }
                    </span>
                </div>

                <div class="d-flex justify-content-between">
                    <div>
                        @* dose 1 date *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-calendar-alt"></i> Dose 1 Date :
                                @if (Model.UserBookingDetails.Dose1BookDate == DateTime.MinValue)
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    @Model.UserBookingDetails.Dose1BookDate.ToString("yyyy-MM-dd")
                                }
                            </span>
                        </div>

                        @* dose 1 vaccine center *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-hospital"></i> Dose 1 Center Name : @ViewBag.D1HospitalName
                            </span>
                            @* @Model.UserBookingDetails.D1HospitalId *@
                            
                        </div>

                        @* dose 1 slot number *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-sort-numeric-up"></i> Dose 1 Slot Number :
                                @if (Model.UserBookingDetails.D1SlotNumber == -1)
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    @Model.UserBookingDetails.D1SlotNumber
                                }
                            </span>
                        </div>
                    </div>

                    <div>
                        @* dose 2 date *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-calendar-alt"></i> Dose 2 Date :
                                @if (Model.UserBookingDetails.Dose1BookDate == DateTime.MinValue)
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    @Model.UserBookingDetails.Dose1BookDate.ToString("yyyy-MM-dd")
                                }
                            </span>
                        </div>

                        @* dose 2 center *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-hospital"></i> Dose 2 Center Name : @ViewBag.D2HospitalName
                            </span>
                            @* @Model.UserBookingDetails.D2HospitalId *@
                        </div>

                        @* dose 2 vaccine center *@
                        <div class="mt-2">
                            <span style="font-weight: 600;">
                                <i class="fas fa-sort-numeric-up"></i> Dose 2 Slot Number :
                                @if (Model.UserBookingDetails.D2SlotNumber == -1)
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    @Model.UserBookingDetails.D2SlotNumber
                                }
                            </span>
                        </div>
                    </div>
                </div>
                
            </div>

        </div>
    </div>

    @* 5th row: action buttons *@
    <div class="text-center mt-5">
        
        @* button: edit user profile *@
        @* <a class="user-edit-profile-link" href="@Url.Action("UserProfileEdit", "UserProfile", new {userid = Model.UserId})">Edit Profile</a> *@

        <button type="button" class="user-edit-profile-button" data-bs-toggle="modal" data-bs-target="#editProfileModal">
            Edit Profile
        </button>

        @* button: book slots *@
        @if(ViewBag.IsD1Booked == false)
        {
            // enable slot booking button: dose 1
            @* <a style="text-decoration: none;" class="slot-book-submit" href="@Url.Action("V2Booking", "Booking", new { userid = Model.UserId })">Book Slot 1</a> *@
        
            <button type="button" class="slot-book-submit" data-bs-toggle="modal" data-bs-target="#dose1Book">
                Book Slot 1
            </button>
        
        }
        else if(ViewBag.IsD1Booked == true && ViewBag.IsD2Booked == false)
        {
            // enable slot booking button: dose 2
            @* <a style="text-decoration: none;" class="slot-book-submit" href="@Url.Action("V2Booking", "Booking", new { userid = Model.UserId })">Book Slot 2</a> *@
        
            <button type="button" class="slot-book-submit" data-bs-toggle="modal" data-bs-target="#dose2Book">
                Book Slot 2
            </button>

        }
        else
        {
            // think
        }

        

    </div>

    @* 6th row: modals *@

        <div>
            <!-- edit form -->
            <div class="modal fade" id="editProfileModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Edit Profile</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="UserProfileForm">
                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Phone Number</label>
                                    <input type="text" class="form-control user-edit-profile-input" id="phoneNumber" name="phoneNumber" maxlength="10" pattern="\d{10}">
                                    <div class="invalid-feedback">
                                        Please enter a valid 10-digit phone number.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control user-edit-profile-input" id="dateOfBirth" name="dateOfBirth" max="@currMonthYear">
                                    <div class="invalid-feedback">
                                        Please enter a valid date of birth.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="profileImage" class="form-label">Profile Image</label>
                                    <input type="file" class="form-control user-edit-profile-input" id="profileImage" name="profileImage" accept="image/*">
                                    <div class="invalid-feedback">
                                        Please upload a valid image file.
                                    </div>
                                </div>
                                <button type="button" class="user-edit-profile-submit" id="saveChangesButton">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- confirm password -->
            <div class="modal fade" id="editProfileModal2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalToggleLabel2">Confirm Changes</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="PasswordConfirmForm" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control user-edit-profile-input" id="password" name="password" required>
                                    <div class="invalid-feedback">
                                        Please enter your password to confirm changes.
                                    </div>
                                </div>
                                <input type="hidden" id="hiddenPhoneNumber" name="phoneNumber">
                                <input type="hidden" id="hiddenDateOfBirth" name="dateOfBirth">
                                <input type="file" style="display: none;" id="hiddenProfileImage" name="profileImage">
                                <button type="submit" class="user-edit-profile-submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    @* 7th row: dose booking *@
    <div id="slot-booking" class="d-flex justify-content-center mt-3">

    </div>



</div>




@section Scripts{

    <script>
        document.getElementById('saveChangesButton').addEventListener('click', function() {
        var phoneNumber = document.getElementById('phoneNumber').value;
        var dateOfBirth = document.getElementById('dateOfBirth').value;
        var profileImage = document.getElementById('profileImage').files[0];

        if (phoneNumber || dateOfBirth || profileImage) {
            // Set hidden fields in the second form
            document.getElementById('hiddenPhoneNumber').value = phoneNumber;
            document.getElementById('hiddenDateOfBirth').value = dateOfBirth;

            if (profileImage) {
                var hiddenProfileImageInput = document.getElementById('hiddenProfileImage');
                hiddenProfileImageInput.files = document.getElementById('profileImage').files;
            }

            // Extract the user ID from the URL
            var url = window.location.href;
            var userId = url.substring(url.lastIndexOf('/') + 1);

            // Set the form action dynamically
            var form = document.getElementById('PasswordConfirmForm');
            form.action = '/UserProfile/' + userId + '/Edit';

            var modal = new bootstrap.Modal(document.getElementById('editProfileModal2'));
            modal.show();
        } else {
            alert('Please provide at least one input.');
        }
    });
    </script>


    
    <script>
        window.onload = function() {
            setTimeout(function() {
                var welcomeMessage = document.getElementById('welcomeMessage');
                if (welcomeMessage) {
                    welcomeMessage.style.display = 'none';
                }
            }, 5000); // 5000 milliseconds = 5 seconds

            setTimeout(function() {
                var updateStatusMsg = document.getElementById('updateStatusMsg');
                if (updateStatusMsg) {
                    updateStatusMsg.style.display = 'none';
                }
            }, 5000); // 5000 milliseconds = 5 seconds

            setTimeout(function() {
                var bookingStatusMsg = document.getElementById('bookingStatusMsg');
                if (bookingStatusMsg) {
                    bookingStatusMsg.style.display = 'none';
                }
            }, 5000); // 5000 milliseconds = 5 seconds
        };
    </script>

}
